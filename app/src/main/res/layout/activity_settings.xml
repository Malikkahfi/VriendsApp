<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/graylight">
    
    <include android:id="@+id/settings_toolbar"
        layout="@layout/app_bar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/settings_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <LinearLayout
                android:id="@+id/linearlayoutsettings"
                android:background="@drawable/gradientbackground"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/settings_profile_image"
                    android:layout_marginTop="15dp"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/profile"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="2dp"
                    android:layout_gravity="center_horizontal"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/white">
                <EditText
                    android:id="@+id/settings_status"
                    android:hint="Profile Status"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearlayoutsettings"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textColorHint="@color/textBlue"
                    android:layout_marginLeft="30dp">
                <EditText
                    android:id="@+id/settings_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/textBlue"
                    android:hint="Change Username"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textColorHint="@color/textBlue"
                    android:layout_marginLeft="30dp">
                <EditText
                    android:id="@+id/settings_profile_full_name"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="profilename"
                    android:textColor="@color/textBlue"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textColorHint="@color/textBlue"
                    android:layout_marginLeft="30dp">
                <EditText
                    android:id="@+id/settings_country"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlue"
                    android:hint="country"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textColorHint="@color/textBlue"
                    android:layout_marginLeft="30dp">
                <EditText
                    android:id="@+id/settings_dob"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlue"
                    android:hint="date of birth"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textColorHint="@color/textBlue"
                    android:layout_marginLeft="30dp">
                <EditText
                    android:id="@+id/settings_gender"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlue"
                    android:hint="gender"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textColorHint="@color/textBlue"
                    android:layout_marginLeft="30dp">
                <EditText
                    android:id="@+id/settings_relationship_status"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlue"
                    android:hint="relationship status"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/update_account_settings_buttons"
                    android:layout_marginTop="15dp"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/buttonclick"
                    android:text="Update Settings Account"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>